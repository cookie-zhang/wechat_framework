/* pages/search/index.wxss */

page{
    background-color: #FFFFFF;
    /*background: #F4F4F4;*/
}
.ui-main {
    padding: 24rpx;
}
.ui-input {
    display: flex;
}
.ui-input__left {
    width: 606rpx;
    height:64rpx;
    padding-left: 92rpx;
    background:rgba(245,245,245,1);
    border-radius: 8rpx;
    background-repeat: no-repeat;
    background-size: 36rpx 36rpx;
    background-position: 36rpx center;
}
.ui-input__input {
    height: 64rpx;
    font-size:28rpx;
    font-weight:400;
    color:rgba(88, 87, 87, 1);
    line-height: 64rpx;
}
.ui-input__text {
    display: inline-block;
    width: 100rpx;
    height: 64rpx;
    padding: 0 20rpx;
    font-size:28rpx;
    font-weight:500;
    color:rgba(102,102,102,1);
    line-height: 64rpx;
}

.ui-history {
    width: 100%;
    margin-top: 48rpx;
    position: relative;
}
.ui-history__title {
    height:28rpx;
    font-size:28rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:28rpx;
}
.ui-history__noRecode {
    width:100%;
    height:28rpx;
    margin-top: 32rpx;
    font-size:28rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:28rpx;
}
.ui-history__recycle {
    width: 44rpx;
    height: 44rpx;
    box-sizing: content-box;
    position: absolute;
    top: 0;
    right: 0;
}
.ui-history__recycle > image {
    width: 44rpx;
    height: 44rpx;
}
.ui-history__recode {
    width: 100%;
    height: auto;
    margin-top: 32rpx;
}
.ui-history__item {
    display: inline-block;
    width: auto;
    height: 48rpx;
    margin:20rpx 24rpx 0 0;
    padding:0 24rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
    background:rgba(245,245,245,1);
    border-radius:8rpx;
    line-height: 48rpx;
    position: relative;
}
.ui-icon__close {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    top: -16rpx;
    right: -16rpx;
}
.ui-icon__close > image {
    width: 100%;
    height: 100%;
}
.is-yellow {
    color:rgba(255,170,0,1);
}

.ui-classify {
    display: inline-block;
    width:108rpx;
    height:108rpx;
    margin:16rpx 22rpx 0 10rpx;
}
.ui-classify__img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: #e6e6ee;
}
.ui-classify__title {
    width:100%;
    height:24rpx;
    margin-top: 6rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:24rpx;
    text-align: center;
}
.ui-search {
    display: flex;
    position: fixed;
    top: 55rpx;
    left: 75rpx;
    z-index: 999999999;
}
.ui-search__input {
    width:450rpx;
    height:60rpx;
    padding-left: 23rpx;
    line-height: 60rpx;
    font-size:24rpx;
    color:#666666;
    font-weight:bold;
    background:rgba(247,247,247,1);
    border-radius:30px;
}
.ui-select {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 64px;
    left: 0;
    width: 100%;
    height: 60rpx;
    padding: 10rpx 23rpx 12rpx 48rpx;
    background: #ffffff;
}
.ui-selectTab {
    font-size:30rpx;
    font-weight:bold;
    color:#333333;
    line-height:38rpx;
}
.ui-selectTab.is-filtrate image {
    width: 15rpx;
    height: 17rpx;
}
.ui-selectTab>image {
    width: 17rpx;
    height: 10rpx;
    margin-left: 7rpx;
    vertical-align: middle;
}
.ui-select__way {
    /*width: ;
    height: ;*/
}
.ui-select__wayIcon {
    width: 32rpx;
    height: 32rpx;
}
.is-select {
    color: #FF1B47;
}
.ui-goods {

}
.ui-goods__item {
    height:277rpx;
    margin-top: 20rpx;
    background:rgba(255,255,255,1);
    border-radius:10rpx;
    overflow: hidden;
}
.ui-goods__img {
    float: left;
    width: 219rpx;
    height: 219rpx;
    margin-top: 27rpx;
    margin-left: 21rpx;

}
.ui-goods__right {
    padding-left: 269rpx;
}
.ui-goods__title {
    margin-top: 32.5rpx;
    margin-bottom: 13.5rpx;
    font-size:34rpx;
    font-weight:bold;
    color:#333333;
    line-height:46rpx;
}
.ui-goods__text {
    font-size:20rpx;
    font-weight:500;
    color:#999999;
    line-height:1;
}
.ui-goods__price {
    display: flex;
    align-items: center;
    margin-top: 13rpx;
    margin-bottom: 16rpx;
    font-size: 36rpx;
    font-weight:500;
    color:#FF0035;
    line-height:1;
}
.ui-goods__priceSign {
    font-size: 22rpx;
}
.ui-goods__originPrice {
    padding-left: 19rpx;
    font-size:26rpx;
    font-weight:500;
    text-decoration:line-through;
    color:#999999;
}
.ui-goods__link {
    display: flex;
    height:24rpx;
    line-height: 22rpx;
    font-size:20rpx;
    color:#FF0035;
    font-weight:500;
}
.ui-goods__linkEffect {
    margin-right: 9rpx;
    padding: 0 15rpx;
    border:1rpx solid rgba(254,77,114,0.3);
    border-radius:4rpx;
    box-sizing: border-box;
}
.ui-goods__linkHouse,
.ui-goods__linkHot {
    margin-right: 9rpx;
    padding: 0 16rpx;
    background:#FFA9BB;
    background:rgba(255,169,187,0.3);
    border-radius:4rpx;
}

.ui-goods__vertical {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.ui-goods__verItem {
    width:339rpx;
    height:515rpx;
    margin-top: 20rpx;
    font-size: 0;
    background:#FFFFFF;
    border-radius:10rpx;
}
.ui-goods__verImg {
    width: 339rpx;
    height: 305rpx;
    border-radius: 10rpx;

}

.ui-goods__verTitle {
    margin-top: 23rpx;
    margin-bottom: 4rpx;
    padding: 0 22rpx 0 14rpx;
    font-size:23rpx;
    color:#666666;
    line-height:37rpx;
    font-weight:bold;
}
.ui-goods__verText {
    padding-left: 15rpx;
    font-size:18rpx;
    color:#999999;
    line-height:1;
    font-weight:500;
    color:rgba(153,153,153,1);
}
.ui-goods__verPrice {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
    margin-bottom: 12rpx;
    padding-left: 20rpx;
    font-size: 33rpx;
    font-weight:500;
    color:#FF0035;
    line-height:1;
}
.ui-goods__verPriceSign {
    font-size: 20rpx;
}
.ui-goods__verOriginPrice {
    padding-left: 19rpx;
    font-size:26rpx;
    font-weight:500;
    text-decoration:line-through;
    color:#999999;
}
.ui-goods__verLink {
    display: flex;
    height: 24rpx;
    line-height: 22rpx;
    padding-left: 13rpx;
    font-size:20rpx;
    color:#FF0035;
    font-weight:500;
}
.ui-goods__verLinkEffect {
    margin-right: 9rpx;
    padding: 0 15rpx;
    border:1rpx solid rgba(254,77,114,0.3);
    border-radius:4rpx;
}
.ui-goods__verLinkHouse,
.ui-goods__verLinkHot {
    margin-right: 9rpx;
    padding: 0 16rpx;
    background:rgba(255,169,187,0.3);
    border-radius:4rpx;
}
.ui-bottom {
    padding: 37rpx 0 250rpx;
    font-size:24rpx;
    color:#999999;
    text-align: center;
    font-weight:500;
}