.ui-authorize {
	position: fixed;
	left: 0;
	top: 0;
	width: 750rpx;
	height: 100%;
	z-index: 1010;
}

.ui-authorize__bg {
	position: fixed;
	left: 0;
	top: 0;
	width: 750rpx;
	height: 100%;
	background-color: rgba(0,0,0,0.3);
}

.ui-dialog__bd {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	width: 590rpx;
	height: 330rpx;
	margin: auto;
	background-color: #fff;
	border-radius: 20rpx;
}

.ui-dialog__content {
	height:238rpx;
	text-align: center;
	vertical-align: middle;
	line-height: 238rpx;
	box-sizing: border-box;
	font-size: 30rpx;
	color: #333333;
}

.ui-btns {
	display: flex;
	flex-wrap: nowrap;
	align-items: flex-start;
	height: 90rpx;
}

.ui-btn {
	/*flex: 1;*/
	width: 258rpx;
	height: 62rpx;
	line-height: 60rpx;
	font-size: 28rpx;
	color: #333;
	text-align: center;
	border: 1px solid #D5D5D5;
	border-radius: 30rpx;
}

.ui-btn:last-child {
	color: #fff;
	background-color: #FF3F68;
	border: 1px solid #FF3F68;
}