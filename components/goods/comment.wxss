@import "/components/header/header.wxss";

.ui-main {
    position: fixed;
    width: 100%;
    height: 100%;
    padding-bottom: 120rpx;
    z-index: 100;
    background-color: #fff;
}

.ui-commentBox {
    width: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
    border-top: 1px solid #F1F1F1;
}

.ui-infoIrem__imgBox {
    display: inline-block;
}

.ui-commentItem {
    padding-top: 40rpx;
    border-bottom: 1px solid #F1F1F1;
}

.ui-commentItem:last-child {
    margin-bottom: 300rpx;
} 

.ui-commentItem__info {
    width: 100%;
    white-space: nowrap;
}

.ui-imgItem__perIcon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 12rpx;
    border-radius: 50%;
}

.ui-infoItem_name {
    display: inline-block;
    width: 480rpx;
    margin-top: 19rpx;
    vertical-align: top;
    line-height: 28rpx;
    font-size: 28rpx;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
    color: #666666;
    white-space: normal;
}

.ui-infoItem_time {
    display: inline-block;
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #C7C7C7;
    line-height: 26rpx;
    margin-top: 19rpx;
    vertical-align: top;
}

.ui-commentItem__content {
    line-height: 40rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #666666;
}

.ui-imagesItem__img {
    width: 200rpx;
    height: 200rpx;
    margin: 0rpx 20rpx 20rpx 0;
}

.ui-tab {
    display: flex;
    width: 750rpx;
    height: 120rpx;
    line-height: 120rpx;
    background: #FFFFFF;
    box-shadow: 0rpx -4rpx 24rpx 0rpx rgba(103, 103, 103, 0.09);
    position: fixed;
    bottom: 0;
    right: 0;
    align-items: center;
}

.ui-home {
    margin-left: 40rpx;
    position: relative;
}

.ui-home:nth-child(2) {
    margin-left: 52rpx;
}

.ui-tab__icon {
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin: 0 auto;
}

.ui-tab__text {
    margin: 0 auto;
    margin-top: 4rpx;
    font-size: 20rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #999999;
    line-height: 20rpx;
}

.ui-index {
    width: 32rpx;
    height: 32rpx;
    font-size: 24rpx;
    font-family: PingFang-SC-Heavy, PingFang-SC;
    font-weight: 800;
    color: #FFFFFF;
    line-height: 32rpx;
    text-align: center;
    background: #FB584D;
    border-radius: 50%;
    position: absolute;
    top: -10rpx;
    right: -20rpx;
}

.ui-tab__btn {
    display: flex;
    width: 240rpx;
    height: 96rpx;
    margin-left: 42rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    /* line-height: 96rpx; */
    text-align: center;
    background: linear-gradient(135deg, rgba(255, 170, 0, 1) 0%, rgba(255, 199, 88, 1) 100%);
    border-radius: 8rpx;
    align-self: center;
    justify-content: center;
    flex-direction: column;
}

.ui-tab__btn>text {
    display: block;
    line-height: 32rpx;
    font-weight: 400;
}

.ui-tab__btn>text:nth-child(2) {
    margin-top: 4rpx;
}

.ui-tab__btn:last-child {
    background: linear-gradient(360deg, rgba(251, 88, 77, 1) 0%, rgba(255, 126, 149, 1) 100%);
    margin-left: 12rpx;
}

.ui-modal {
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.ui-shadow {
    position: absolute;
    z-index: 1000;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, .5);
}

.ui-modalContent {
    display: flex;
    width: 100%;
    height: 954rpx;
    padding: 32rpx 24rpx 0 24rpx;
    position: absolute;
    z-index: 10001;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #FFFFFF;
    border-radius: 20rpx 20rpx 0px 0px;
    flex-direction: column;
    -webkit-transform: translateY(100%);
    transform: translateY(100%);
}

.ui-modal__wrap {
    width: 100%;
    height: 240rpx;
    position: relative;
    border-bottom: 1rpx solid #F5F5F5;
}

.ui-goodsImg {
    width: 200rpx;
    height: 200rpx;
}

.ui-modal__goods {
    display: inline-block;
    width: 402rpx;
    height: 100%;
    margin-left: 20rpx;
    vertical-align: top;
}

.ui-goods__price {
    margin-top: 52rpx;
    font-size: 44rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FB584D;
    line-height: 44rpx;
}

.ui-goods__price>text {
    font-size: 32rpx;
}

.ui-chooseTitle {
    margin-top: 20rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #999999;
    line-height: 34rpx;
}

.ui-cancelIcon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.ui-sizeTitle {
    margin-top: 40rpx;
    font-size: 30rpx;
    font-family: PingFang-SC-Medium, PingFang-SC;
    font-weight: 500;
    color: #333333;
    line-height: 30rpx;
}

.ui-sizeBtn {
    display: inline-block;
    height: 56rpx;
    margin-top: 20rpx;
    margin-right: 24rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    font-family: PingFang-SC-Medium, PingFang-SC;
    font-weight: 500;
    color: #333333;
    line-height: 56rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
}

.isSelect {
    background: #FFF0F1;
    color: #FB584D;
    border: 1px solid rgba(251, 88, 77, 1);
}

.ui-number {
    display: flex;
    height: 60rpx;
    margin-top: 40rpx;
    align-items: center;
}

.ui-numTitle {
    font-size: 30rpx;
    font-family: PingFang-SC-Medium, PingFang-SC;
    font-weight: 500;
    color: #333333;
    line-height: 30rpx;
}

.ui-addNum {
    width: 188rpx;
    height: 100%;
    margin-left: auto;
    background: #F5F5F5;
}

.ui-numIcon {
    width: 60rpx;
    height: 60rpx;
    vertical-align: top;
}

.ui-total {
    display: inline-block;
    width: 68rpx;
    height: 60rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #333333;
    line-height: 60rpx;
    text-align: center;
    background: #F5F5F5;
    border-left: 1rpx dotted #cccccc;
    border-right: 1rpx dotted #cccccc;
    vertical-align: top;
}